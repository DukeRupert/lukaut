# =============================================================================
# Production Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in the values.
# NEVER commit .env.production to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# Domain Configuration
# -----------------------------------------------------------------------------
DOMAIN=lukaut.app
BASE_URL=https://lukaut.app

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
POSTGRES_USER=lukaut
POSTGRES_PASSWORD=CHANGE_THIS_TO_A_STRONG_PASSWORD
POSTGRES_DB=lukaut

# -----------------------------------------------------------------------------
# Email (Postmark SMTP)
# -----------------------------------------------------------------------------
SMTP_HOST=smtp.postmarkapp.com
SMTP_PORT=587
SMTP_USERNAME=your-postmark-server-api-token
SMTP_PASSWORD=your-postmark-server-api-token
SMTP_FROM=noreply@yourdomain.com
SMTP_FROM_NAME=Lukaut

# -----------------------------------------------------------------------------
# Cloudflare R2 Storage
# -----------------------------------------------------------------------------
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=lukaut-files
# Optional: Custom domain for R2 public access
R2_PUBLIC_URL=https://files.yourdomain.com

# -----------------------------------------------------------------------------
# AI Provider
# -----------------------------------------------------------------------------
AI_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-api-your-key-here
ANTHROPIC_MODEL=claude-sonnet-4-20250514
AI_MAX_RETRIES=3
AI_RETRY_BASE_DELAY=1s
AI_REQUEST_TIMEOUT=60s

# -----------------------------------------------------------------------------
# Background Worker
# -----------------------------------------------------------------------------
WORKER_ENABLED=true
WORKER_CONCURRENCY=2
WORKER_POLL_INTERVAL=5s
WORKER_JOB_TIMEOUT=5m

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# Invite Codes (MVP)
# -----------------------------------------------------------------------------
INVITE_CODES_ENABLED=true
VALID_INVITE_CODES=BETA2024,INSPECTOR2024

# -----------------------------------------------------------------------------
# Docker Image Settings (set by CI/CD, usually don't need to change)
# -----------------------------------------------------------------------------
IMAGE_TAG=latest
