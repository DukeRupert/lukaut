// ShowPage renders the inspection detail page.
templ ShowPage(data ShowPageData) {
	@layouts.AppLayout(layouts.AppLayoutData{
		Title:       data.Inspection.Title,
		CurrentPath: data.CurrentPath,
		User:        userToLayoutUser(data.User),
		CSRFToken:   data.CSRFToken,
		Flash:       data.Flash,
	}) {
		// Keyboard shortcuts wrapper
		<div
			x-data
			@keydown.r.window="if (!['INPUT','TEXTAREA','SELECT'].includes($event.target.tagName) && !$event.metaKey && !$event.ctrlKey && !$event.altKey && $el.dataset.hasViolations === 'true') { window.location.href = $el.dataset.reviewUrl; $event.preventDefault(); }"
			@keydown.v.window="if (!['INPUT','TEXTAREA','SELECT'].includes($event.target.tagName) && !$event.metaKey && !$event.ctrlKey && !$event.altKey && $el.dataset.hasViolations === 'true') { window.location.href = $el.dataset.reviewUrl; $event.preventDefault(); }"
			data-has-violations={ fmt.Sprintf("%t", data.ViolationCounts.Total > 0) }
			data-review-url={ fmt.Sprintf("/inspections/%s/review/queue", data.InspectionID) }
		>
			// Header with actions
			@ShowHeader(data.Inspection)
			// Flash message
			@shared.InlineFlash(data.Flash)
			// Details Card
			@DetailsCard(data.Inspection)
			// Unified Photos Section
			@PhotosSection(data.InspectionID, data.GalleryData, data.CanUpload, data.IsAnalyzing)
			// Violations Summary Section
			@ViolationsSummary(data.InspectionID, data.ViolationCounts, data.IsAnalyzing)
			// Reports Section
			@ReportsSection(data.InspectionID, data.Reports, data.ClientEmail, data.CanGenerateReport, data.ViolationCounts.Confirmed)
		</div>
	}
}

// ShowHeader renders the page header with title and actions.
templ ShowHeader(inspection *InspectionDisplay) {
	<div class="md:flex md:items-center md:justify-between mb-6">
		<div class="min-w-0 flex-1">
			<h2 class="text-2xl font-bold leading-7 text-gray-900 sm:truncate sm:text-3xl sm:tracking-tight">
				{ inspection.Title }
			</h2>
			<div class="mt-1 flex flex-col sm:mt-0 sm:flex-row sm:flex-wrap sm:space-x-6">
				<div class="mt-2 flex items-center text-sm text-gray-500">
					@CalendarIcon()
					{ inspection.InspectionDate }
				</div>
				if inspection.City != "" && inspection.State != "" {
					<div class="mt-2 flex items-center text-sm text-gray-500">
						@LocationIcon()
						{ inspection.City }, { inspection.State }
					</div>
				}
				<div class="mt-2 flex items-center text-sm">
					@StatusBadge(inspection.Status)
				</div>
			</div>
		</div>
		<div class="mt-4 flex md:ml-4 md:mt-0 gap-x-3">
			<a
				href={ templ.SafeURL(fmt.Sprintf("/inspections/%s/edit", inspection.ID)) }
				class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
			>
				@EditIcon()
				Edit
			</a>
			<a
				href="/inspections"
				class="inline-flex items-center rounded-md bg-navy px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-navy/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-navy"
			>
				Back to List
			</a>
		</div>
	</div>
}

// DetailsCard renders the inspection details.
templ DetailsCard(inspection *InspectionDisplay) {
	<div class="bg-white shadow sm:rounded-lg mb-6">
		<div class="px-4 py-5 sm:p-6">
			<h3 class="text-base font-semibold leading-6 text-gray-900 mb-4">Inspection Details</h3>
			<dl class="grid grid-cols-1 gap-x-4 gap-y-6 sm:grid-cols-2">
				if inspection.ClientName != "" {
					<div class="sm:col-span-1">
						<dt class="text-sm font-medium text-gray-500">Client</dt>
						<dd class="mt-1 text-sm text-gray-900">{ inspection.ClientName }</dd>
					</div>
				}
				<div class="sm:col-span-1">
					<dt class="text-sm font-medium text-gray-500">Inspection Date</dt>
					<dd class="mt-1 text-sm text-gray-900">{ inspection.InspectionDate }</dd>
				</div>
				if inspection.AddressLine1 != "" {
					<div class="sm:col-span-2">
						<dt class="text-sm font-medium text-gray-500">Location</dt>
						<dd class="mt-1 text-sm text-gray-900">
							{ inspection.AddressLine1 }
							if inspection.AddressLine2 != "" {
								<br/>
								{ inspection.AddressLine2 }
							}
							<br/>
							{ inspection.City }, { inspection.State } { inspection.PostalCode }
						</dd>
					</div>
				}
				if inspection.WeatherConditions != "" {
					<div class="sm:col-span-1">
						<dt class="text-sm font-medium text-gray-500">Weather Conditions</dt>
						<dd class="mt-1 text-sm text-gray-900">{ inspection.WeatherConditions }</dd>
					</div>
				}
				if inspection.Temperature != "" {
					<div class="sm:col-span-1">
						<dt class="text-sm font-medium text-gray-500">Temperature</dt>
						<dd class="mt-1 text-sm text-gray-900">{ inspection.Temperature }</dd>
					</div>
				}
				if inspection.InspectorNotes != "" {
					<div class="sm:col-span-2">
						<dt class="text-sm font-medium text-gray-500">Inspector Notes</dt>
						<dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap">{ inspection.InspectorNotes }</dd>
					</div>
				}
				<div class="sm:col-span-1">
					<dt class="text-sm font-medium text-gray-500">Created</dt>
					<dd class="mt-1 text-sm text-gray-900">{ inspection.CreatedAt }</dd>
				</div>
				<div class="sm:col-span-1">
					<dt class="text-sm font-medium text-gray-500">Last Updated</dt>
					<dd class="mt-1 text-sm text-gray-900">{ inspection.UpdatedAt }</dd>
				</div>
			</dl>
		</div>
	</div>
}

// PhotosSection renders the unified photos section with upload and gallery.
templ PhotosSection(inspectionID string, gallery ImageGalleryData, canUpload bool, isAnalyzing bool) {
	<div
		class="bg-white shadow sm:rounded-lg mb-6"
		x-data={ photosAlpineData(inspectionID) }
		@keydown.u.window="if (!['INPUT','TEXTAREA','SELECT'].includes($event.target.tagName) && !$event.metaKey && !$event.ctrlKey && !$event.altKey) { $refs.fileInput.click(); $event.preventDefault(); }"
	>
		<div class="px-4 py-5 sm:p-6">
			// Header with upload button
			<div class="flex items-center justify-between mb-4">
				<div>
					<h3 class="text-base font-semibold leading-6 text-gray-900">Site Photos</h3>
					if canUpload {
						<p class="mt-1 text-sm text-gray-500">
							Press <kbd class="px-1.5 py-0.5 text-xs font-semibold bg-gray-100 border border-gray-200 rounded">U</kbd> to upload
						</p>
					}
				</div>
				if canUpload {
					<label class="cursor-pointer inline-flex items-center rounded-md bg-navy px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-navy/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-navy">
						@UploadIcon()
						Upload Photos
						<input
							type="file"
							x-ref="fileInput"
							class="sr-only"
							multiple
							accept="image/jpeg,image/png"
							@change="handleFiles($event.target.files)"
						/>
					</label>
				}
			</div>
			// Drag and drop zone
			if canUpload {
				<div
					x-show="isDragging"
					x-transition
					class="mb-4 flex justify-center rounded-lg border-2 border-dashed border-blue-400 bg-blue-50 px-6 py-10"
					@dragover.prevent="isDragging = true"
					@dragleave.prevent="isDragging = false"
					@drop.prevent="isDragging = false; handleFiles($event.dataTransfer.files)"
				>
					<div class="text-center">
						@ImagePlaceholderIcon()
						<p class="mt-2 text-sm font-medium text-blue-600">Drop files to upload</p>
					</div>
				</div>
			}
			// Progress bar
			<div x-show="isUploading" x-transition class="mb-4">
				<div class="flex items-center justify-between mb-1">
					<span class="text-sm font-medium text-gray-700">Uploading...</span>
					<span class="text-sm font-medium text-gray-700" x-text="progress + '%'"></span>
				</div>
				<div class="w-full bg-gray-200 rounded-full h-2.5">
					<div
						class="bg-navy h-2.5 rounded-full transition-all duration-300"
						:style="'width: ' + progress + '%'"
					></div>
				</div>
			</div>
			// Image Gallery
			@ImageGallery(gallery)
			// Analyzing indicator
			if isAnalyzing {
				<div class="mt-4 flex items-center justify-center py-3 px-4 bg-blue-50 rounded-lg">
					@SpinnerIcon()
					<span class="text-sm font-medium text-blue-700">Analyzing images...</span>
				</div>
			}
		</div>
	</div>
}

// ImageGallery renders the image gallery with htmx polling support.
templ ImageGallery(data ImageGalleryData) {
	<div
		id="image-gallery"
		if data.IsAnalyzing {
			hx-get={ fmt.Sprintf("/inspections/%s/images", data.InspectionID) }
			hx-trigger="every 3s"
			hx-swap="outerHTML"
		}
	>
		// Error messages
		if len(data.Errors) > 0 {
			<div class="rounded-md bg-red-50 p-4 mb-4">
				<div class="flex">
					<div class="flex-shrink-0">
						@ErrorCircleIcon()
					</div>
					<div class="ml-3">
						<h3 class="text-sm font-medium text-red-800">Upload errors</h3>
						<div class="mt-2 text-sm text-red-700">
							<ul role="list" class="list-disc space-y-1 pl-5">
								for _, err := range data.Errors {
									<li>{ err }</li>
								}
							</ul>
						</div>
					</div>
				</div>
			</div>
		}
		// Image grid
		if len(data.Images) > 0 {
			<div class="grid grid-cols-2 gap-4 sm:grid-cols-3 lg:grid-cols-4">
				for _, image := range data.Images {
					@ImageCard(data.InspectionID, image)
				}
			</div>
		} else {
			// Empty state
			<div class="text-center py-12">
				@ImageEmptyIcon()
				<h3 class="mt-2 text-sm font-semibold text-gray-900">No images</h3>
				<p class="mt-1 text-sm text-gray-500">Get started by uploading site photos.</p>
			</div>
		}
	</div>
}

// ImageCard renders a single image in the gallery.
templ ImageCard(inspectionID string, image ImageDisplay) {
	<div
		class="group relative aspect-square overflow-hidden rounded-lg bg-gray-100"
		x-data="{ showActions: false }"
	>
		// Thumbnail image
		<img
			src={ image.ThumbnailURL }
			alt={ image.OriginalFilename }
			class="h-full w-full object-cover"
			loading="lazy"
		/>
		// Analysis status badge
		<div class="absolute top-2 left-2">
			@ImageAnalysisBadge(image.AnalysisStatus)
		</div>
		// Hover overlay with actions
		<div class="absolute inset-0 bg-gray-900 bg-opacity-0 group-hover:bg-opacity-50 transition-all duration-200">
			<div class="hidden group-hover:flex h-full items-center justify-center space-x-2">
				// View button
				<a
					href={ templ.SafeURL(fmt.Sprintf("/images/%s/original", image.ID)) }
					target="_blank"
					class="inline-flex items-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm hover:bg-gray-100"
				>
					@EyeIcon()
					View
				</a>
				// Delete button
				<button
					type="button"
					hx-delete={ fmt.Sprintf("/inspections/%s/images/%s", inspectionID, image.ID) }
					hx-confirm="Are you sure you want to delete this image?"
					hx-target="#image-gallery"
					hx-swap="outerHTML"
					class="inline-flex items-center rounded-md bg-red-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-red-500"
				>
					@TrashIcon()
					Delete
				</button>
			</div>
		</div>
		// Image filename and size
		<div class="absolute bottom-0 left-0 right-0 bg-gradient-to-t from-black/60 to-transparent p-2 opacity-0 group-hover:opacity-100 transition-opacity">
			<p class="text-xs text-white truncate" title={ image.OriginalFilename }>{ image.OriginalFilename }</p>
			<p class="text-xs text-gray-300">{ image.SizeMB } MB</p>
		</div>
	</div>
}

// ImageAnalysisBadge renders the analysis status badge for an image.
templ ImageAnalysisBadge(status string) {
	switch status {
		case "pending":
			<span class="inline-flex items-center rounded-md bg-yellow-50 px-2 py-1 text-xs font-medium text-yellow-800 ring-1 ring-inset ring-yellow-600/20">
				Pending
			</span>
		case "analyzing":
			<span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-800 ring-1 ring-inset ring-blue-600/20 animate-pulse">
				@SmallSpinnerIcon()
				Analyzing
			</span>
		case "completed":
			<span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-800 ring-1 ring-inset ring-green-600/20">
				Analyzed
			</span>
		case "failed":
			<span class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-800 ring-1 ring-inset ring-red-600/20">
				Failed
			</span>
	}
}

// ViolationsSummary renders the violations summary section.
templ ViolationsSummary(inspectionID string, counts ViolationCountsData, isAnalyzing bool) {
	<div
		id="violations-summary"
		hx-get={ fmt.Sprintf("/inspections/%s/violations-summary", inspectionID) }
		if isAnalyzing {
			hx-trigger="every 3s, galleryUpdated from:body, analysisComplete from:body"
		} else {
			hx-trigger="galleryUpdated from:body, analysisComplete from:body"
		}
		hx-swap="outerHTML"
		class="bg-white shadow sm:rounded-lg"
	>
		<div class="px-4 py-5 sm:p-6">
			<div class="flex items-center justify-between">
				<div>
					<h3 class="text-base font-semibold leading-6 text-gray-900">Violations</h3>
					if counts.Total > 0 {
						<p class="mt-1 text-sm text-gray-500">
							{ fmt.Sprintf("%d", counts.Total) } potential violation{ pluralS(counts.Total) } identified
							if counts.Pending > 0 {
								({ fmt.Sprintf("%d", counts.Pending) } pending review)
							}
							â€” Press <kbd class="px-1.5 py-0.5 text-xs font-semibold bg-gray-100 border border-gray-200 rounded">V</kbd> to review
						</p>
					} else {
						<p class="mt-1 text-sm text-gray-500">No violations identified yet</p>
					}
				</div>
				if counts.Total > 0 {
					<a
						href={ templ.SafeURL(fmt.Sprintf("/inspections/%s/review/queue", inspectionID)) }
						class="inline-flex items-center rounded-md bg-navy px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-navy/90"
					>
						@ReviewIcon()
						Review Violations
					</a>
				}
			</div>
		</div>
	</div>
}

// ReportsSection renders the reports generation and listing section.
templ ReportsSection(inspectionID string, reports []ReportDisplay, clientEmail string, canGenerate bool, confirmedCount int) {
	<div class="bg-white shadow sm:rounded-lg mt-6">
		<div class="px-4 py-5 sm:p-6">
			<div class="flex items-center justify-between mb-4">
				<div>
					<h3 class="text-base font-semibold leading-6 text-gray-900">Reports</h3>
					if canGenerate {
						<p class="mt-1 text-sm text-gray-500">
							Generate a PDF or Word report with { fmt.Sprintf("%d", confirmedCount) } confirmed violation{ pluralS(confirmedCount) }
						</p>
					} else {
						<p class="mt-1 text-sm text-gray-500">
							Confirm violations to generate a report
						</p>
					}
				</div>
			</div>
			// Generate Report Section
			if canGenerate {
				<form
					x-data="{ format: 'pdf' }"
					hx-post={ fmt.Sprintf("/inspections/%s/reports", inspectionID) }
					hx-target="#report-message"
					hx-swap="innerHTML"
					hx-indicator="#report-spinner"
					class="mb-6"
				>
					<div class="flex flex-wrap items-end gap-4">
						// Format selection (hidden input synced with Alpine)
						<input type="hidden" name="format" x-model="format"/>
						<div>
							<label class="block text-sm font-medium text-gray-700 mb-1">Format</label>
							<div class="flex gap-2">
								<button
									type="button"
									@click="format = 'pdf'"
									:class="format === 'pdf' ? 'bg-navy text-white' : 'bg-white text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50'"
									class="inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold shadow-sm"
								>
									@PDFIcon()
									PDF
								</button>
								<button
									type="button"
									@click="format = 'docx'"
									:class="format === 'docx' ? 'bg-navy text-white' : 'bg-white text-gray-700 ring-1 ring-inset ring-gray-300 hover:bg-gray-50'"
									class="inline-flex items-center rounded-md px-3 py-2 text-sm font-semibold shadow-sm"
								>
									@WordIcon()
									Word
								</button>
							</div>
						</div>
						// Optional email
						<div class="flex-1 min-w-[200px]">
							<label class="block text-sm font-medium text-gray-700 mb-1">
								Email to client <span class="text-gray-400 font-normal">(optional)</span>
							</label>
							<input
								type="email"
								name="recipient_email"
								value={ clientEmail }
								placeholder="client@example.com"
								class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-navy sm:text-sm sm:leading-6"
							/>
						</div>
						// Preview button
						<a
							href={ templ.SafeURL(fmt.Sprintf("/inspections/%s/reports/preview", inspectionID)) }
							target="_blank"
							class="inline-flex items-center rounded-md bg-white px-4 py-2 text-sm font-semibold text-gray-700 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
						>
							@PreviewIcon()
							Preview
						</a>
						// Generate button
						<button
							type="submit"
							class="inline-flex items-center rounded-md bg-safety-orange px-4 py-2 text-sm font-semibold text-white shadow-sm hover:bg-safety-orange/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-safety-orange disabled:opacity-50 disabled:cursor-not-allowed"
						>
							<span id="report-spinner" class="htmx-indicator mr-1">
								@SpinnerIcon()
							</span>
							Generate Report
						</button>
					</div>
					// Message container for htmx response
					<div id="report-message" class="mt-4"></div>
				</form>
			}
			// Existing Reports List
			<div
				id="reports-list"
				hx-get={ fmt.Sprintf("/inspections/%s/reports", inspectionID) }
				hx-trigger="reportQueued from:body, every 3s [document.body.classList.contains('report-polling')]"
				hx-swap="innerHTML"
				hx-on::after-request="if(this.querySelector('.report-ready')) document.body.classList.remove('report-polling')"
			>
				if len(reports) == 0 {
					<p class="text-sm text-gray-500">No reports generated yet.</p>
				} else {
					<div class="space-y-2">
						for _, report := range reports {
							<div class="flex items-center justify-between bg-gray-50 p-3 rounded-md">
								<div>
									<span class="text-sm font-medium text-gray-900">Report generated { report.GeneratedAt }</span>
									<span class="ml-2 text-xs text-gray-500">{ fmt.Sprintf("%d", report.ViolationCount) } violations</span>
								</div>
								<div class="flex gap-2">
									if report.HasPDF {
										<a
											href={ templ.SafeURL(fmt.Sprintf("/reports/%s/download?format=pdf", report.ID)) }
											class="inline-flex items-center rounded-md bg-red-50 px-2 py-1 text-xs font-medium text-red-700 ring-1 ring-inset ring-red-600/10 hover:bg-red-100"
										>
											PDF
										</a>
									}
									if report.HasDOCX {
										<a
											href={ templ.SafeURL(fmt.Sprintf("/reports/%s/download?format=docx", report.ID)) }
											class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-600/10 hover:bg-blue-100"
										>
											Word
										</a>
									}
								</div>
							</div>
						}
					</div>
				}
			</div>
		</div>
	</div>
}

