// photosAlpineData returns the Alpine.js data object for the photos section.
func photosAlpineData(inspectionID string) string {
	return fmt.Sprintf(`{
		isDragging: false,
		isUploading: false,
		progress: 0,
		handleFiles(files) {
			if (!files || files.length === 0) return;
			this.uploadFiles(files);
		},
		uploadFiles(files) {
			this.isUploading = true;
			this.progress = 0;

			const formData = new FormData();
			for (let i = 0; i < files.length; i++) {
				formData.append('images', files[i]);
			}

			const xhr = new XMLHttpRequest();

			xhr.upload.addEventListener('progress', (e) => {
				if (e.lengthComputable) {
					this.progress = Math.round((e.loaded / e.total) * 100);
				}
			});

			xhr.addEventListener('load', () => {
				this.isUploading = false;
				this.progress = 0;
				if (xhr.status === 200) {
					const gallery = document.getElementById('image-gallery');
					if (gallery) {
						// Parse the response and replace the gallery
						const temp = document.createElement('div');
						temp.innerHTML = xhr.responseText;
						const newGallery = temp.firstElementChild;
						gallery.replaceWith(newGallery);
						// Tell htmx to process the new element so polling works
						if (typeof htmx !== 'undefined') {
							htmx.process(newGallery);
							console.log('htmx processed new gallery, has hx-trigger:', newGallery.hasAttribute('hx-trigger'));
						}
						// Dispatch galleryUpdated event to trigger other component refreshes
						document.body.dispatchEvent(new CustomEvent('galleryUpdated'));
					}
				} else {
					alert('Upload failed. Please try again.');
				}
			});

			xhr.addEventListener('error', () => {
				this.isUploading = false;
				this.progress = 0;
				alert('Upload failed. Please check your connection and try again.');
			});

			xhr.open('POST', '/inspections/%s/images');
			xhr.send(formData);
		}
	}`, inspectionID)
}

// pluralS returns "s" if count != 1, empty string otherwise.
func pluralS(count int) string {
	if count == 1 {
		return ""
	}
	return "s"
}

