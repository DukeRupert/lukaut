package clients

import "fmt"

// Breadcrumb renders navigation breadcrumbs
templ Breadcrumb(items []BreadcrumbItem) {
	<nav class="flex" aria-label="Breadcrumb">
		<ol class="flex items-center space-x-4">
			for i, item := range items {
				<li>
					<div class="flex items-center">
						if i > 0 {
							<svg class="h-5 w-5 flex-shrink-0 text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
								<path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd"/>
							</svg>
						}
						if item.Href != "" {
							<a href={ templ.SafeURL(item.Href) } class={ breadcrumbLinkClass(i > 0) }>{ item.Label }</a>
						} else {
							<span class={ breadcrumbTextClass(i > 0) }>{ item.Label }</span>
						}
					</div>
				</li>
			}
		</ol>
	</nav>
}

type BreadcrumbItem struct {
	Label string
	Href  string
}

func breadcrumbLinkClass(hasMargin bool) string {
	base := "text-gray-400 hover:text-gray-500"
	if hasMargin {
		return "ml-4 " + base
	}
	return base
}

func breadcrumbTextClass(hasMargin bool) string {
	base := "text-sm font-medium text-gray-500"
	if hasMargin {
		return "ml-4 " + base
	}
	return base
}

// PageHeader renders the page header with title and optional action button
templ PageHeader(title, description, actionLabel, actionHref string) {
	<div class="sm:flex sm:items-center">
		<div class="sm:flex-auto">
			<h1 class="text-xl font-semibold text-gray-900">{ title }</h1>
			if description != "" {
				<p class="mt-2 text-sm text-gray-700">{ description }</p>
			}
		</div>
		if actionLabel != "" && actionHref != "" {
			<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
				<a
					href={ templ.SafeURL(actionHref) }
					class="block rounded-md bg-accent px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-accent/90 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gold transition-colors"
				>
					{ actionLabel }
				</a>
			</div>
		}
	</div>
}

